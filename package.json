{
  "name": "management-tool",
  "version": "1.0.0",
  "description": "Collections of utilities for managing engineering projects and teams.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "tasks-tree": "yarn start tasks-tree",
    "monte-carlo": "yarn start monte-carlo",
    "simulate": "sh -c 'yarn start tasks-tree \"$0\" \"$1\" && yarn start monte-carlo \"$0\" \"$1\"'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/ --coverage --coverageDirectory=coverage --testPathIgnorePatterns='tests/load/'",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/ --coverage --coverageDirectory=coverage/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration/ --coverage --coverageDirectory=coverage/integration",
    "test:load": "for f in tests/load/*.test.js; do LOG_LEVEL=none node --max-old-space-size=8192 --experimental-vm-modules node_modules/jest/bin/jest.js \"$f\" --no-coverage --runInBand || exit 1; done",
    "lint": "eslint . && echo '\n✓ No linting errors found'",
    "lint:fix": "eslint . --fix && echo '\n✓ Linting complete'"
  },
  "keywords": [
    "management",
    "tool",
    "cli",
    "utilities",
    "monte carlo",
    "task tree"
  ],
  "author": "Bruno G. Salomão Agostini",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:brunogsa/management-tool.git"
  },
  "devDependencies": {
    "eslint": "^9.2.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "ajv": "^8.13.0",
    "ajv-formats": "^3.0.1",
    "chokidar": "3.6.0",
    "commander": "^12.0.0",
    "express": "^4.21.2",
    "open": "^10.1.0",
    "seedrandom": "^3.0.5"
  }
}
